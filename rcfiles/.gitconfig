[user]
    name = mriehl
    email = max@riehl.io

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[push]
	default = tracking

[core]
    editor = vim
    pager = less -R

[alias]
    st = status -uall -s -b
    ci = commit
    br = branch -va
    co = checkout
    go = checkout -b
    df = diff
    cdf = diff --cached
    sdf = diff --staged
    lg = log -p
    logs = log --stat -p --decorate
    destroy = reset --hard
    up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(bold yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    todo =  grep --line-number -I -i --word-regexp TODO
    today = !git log --author=$(git config user.email) --since=yesterday
    ls = ls-files

[help]
    autocorrect = 1

[rerere]
    enabled = 1

[web]
browser = chromium-browser
[branch "master"]
    remote = w
    merge = refs/heads/master
