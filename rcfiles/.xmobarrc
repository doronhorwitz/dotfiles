Config { font = "-misc-fixed-*-*-*-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Com "acpi" [] "" 1800
                    , Run Date "%a %_d/%m %H:%M" "date" 600
                    , Run Com "/usr/local/bin/render-wireless" [] "wifi" 600
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %wifi%  |  %acpi%  |  %date%"
       }
