Config { font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run MultiCpu ["-L","3","-H","50","-n","green","-h","red", "-t", "<autototal>%"] 10
                    , Run Memory ["-t","<usedratio>%"] 10
                    , Run Swap ["-t","<usedratio>%"] 10
                    , Run Date "%a %_d/%m %H:%M" "date" 10
                    , Run Com "acpi" [] "" 60
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ CPUs: %multicpu%  |  Mem: %memory% * Swap: %swap%  |  %acpi%  |  %date%"
       }
